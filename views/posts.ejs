  <script>
    function like(x){
      if(document.getElementById(x).src.indexOf("disheart")==-1){
        document.getElementById(x).src="assets/img/disheart.png";
      }
      else{
        document.getElementById(x).src="assets/img/heart.png";
      }
    }
  
    </script>
  
